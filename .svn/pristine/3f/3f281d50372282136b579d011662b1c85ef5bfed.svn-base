/* pages/activity/activitylist.wxss */
.activity {
    padding: 26rpx 40rpx 26rpx 40rpx;
}
.activity-body{
  width: 100%;
 
  display: flex;
  justify-content: space-between;
  position: relative;
  flex-wrap: wrap;
}
.activity-image{
  width: 25px;
  height: 25px;
  margin-right: 10px;
}
.activity-item{
  width: 130px;
  height: 120px;
  padding: 10px;
}

.activity-item image{
  width: 100%;
 height: 100%;
 position: relative;
}
.activity-item-text{
  position: absolute;
  bottom: 0px;
  color: white;
  width: 100%;
  font-size: 15px;
   background: -webkit-linear-gradient(bottom,rgba(0, 0, 0, 0.8),rgba(0, 0, 0, 0));
   height: 70px;
   display: flex;
   flex-direction: column;
   justify-content: flex-end;
   padding-left: 1%;
   padding-right: 1%;
   padding-bottom: 1%;
}
.activity-item {
    margin: 0 0 35rpx 0;
    width: 40%;
    background-color: #fff;
}
.activity-title {
    color: #AAAAAA;
}